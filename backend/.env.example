# Redis Configuration
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_USERNAME=default
REDIS_PASSWORD=your-redis-password

# App Configuration
NODE_ENV=development
PORT=3001
# For multiple frontend URLs, separate with commas
FRONTEND_URL=http://localhost:5173
# Production example: FRONTEND_URL=https://redisflow.vercel.app,https://redisflow.netlify.app

# Optional Redis Configuration
REDIS_TLS=false
REDIS_MAX_RETRIES=3

# Demo Data & Monitoring Configuration
# Set to false in production to prevent demo data creation
ENABLE_DEMO_DATA=false
# Never set to true in production
ENABLE_AUTO_SEED=false
# Monitor Redis memory and evictions
REDIS_EVICTION_MONITORING=true
# Memory warning threshold (0.8 = 80%)
REDIS_MEMORY_WARNING_THRESHOLD=0.8
